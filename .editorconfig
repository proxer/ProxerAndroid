[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt}]
continuation_indent_size = 4

[*.{java,gradle}]
continuation_indent_size = 8

[*.{yml}]
indent_size = 2

[*.{md}]
trim_trailing_whitespace = false
