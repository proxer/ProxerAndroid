<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="autoCompleteTextViewStyle">@style/Widget.App.AutoCompleteTextView</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>

        <item name="android:windowBackground">@color/background</item>

        <item name="material_drawer_legacy_style">true</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Material</item>

        <item name="asp_preferenceIconTint">@color/colorAccent</item>
        <item name="asp_preferenceDialogIconTint">?asp_preferenceIconTint</item>
    </style>

    <style name="Theme.App.AboutFragment" parent="Theme.Mal.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.App.NoBackground" parent="Theme.App">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Widget.App.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor_white</item>
    </style>

    <style name="Widget.App.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/colorPrimaryLight</item>
    </style>

    <style name="ThemeOverlay.App" parent="@style/ThemeOverlay.AppCompat.Light" />

    <style name="Theme.App" parent="Base.Theme.App" />

    <style name="Theme.App.Transparent" parent="Theme.App" />
</resources>
