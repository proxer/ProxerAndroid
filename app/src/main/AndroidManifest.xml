<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.proxerme.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.MainApplication"
        android:allowBackup="true"
        android:extractNativeLibs="false"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppTheme"
        tools:ignore="UnusedAttribute">
        <activity android:name=".activity.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ProfileActivity"
            android:parentActivityName=".activity.DashboardActivity"
            android:theme="@style/Theme.Translucent"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.DashboardActivity" />

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/user/"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/user/"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.chat.ChatActivity"
            android:parentActivityName=".activity.DashboardActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.DashboardActivity" />
        </activity>
        <activity
            android:name=".activity.UcpActivity"
            android:parentActivityName=".activity.DashboardActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.DashboardActivity" />
        </activity>
        <activity
            android:name=".activity.MediaActivity"
            android:parentActivityName=".activity.DashboardActivity"
            android:theme="@style/Theme.Translucent"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.DashboardActivity" />

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/info/"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/info/"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TranslatorGroupActivity"
            android:parentActivityName=".activity.MediaActivity"
            android:theme="@style/Theme.Translucent"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.DashboardActivity" />
        </activity>
        <activity
            android:name=".activity.ImageDetailActivity"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".activity.StreamActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
            android:exported="true"
            android:theme="@style/Theme.AppThemeNoBackground">
            <intent-filter tools:ignore="GoogleAppIndexingWarning">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:mimeType="video/mp4" />
                <data android:mimeType="video/x-flv" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.chat.NewChatActivity" />
        <activity android:name=".activity.chat.ConferenceInfoActivity" />
        <activity android:name=".activity.MangaActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/chapter/"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/chapter/"
                    android:scheme="https" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/read/"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/read/"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AnimeActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/watch/"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/watch/"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.WebViewActivity" />

        <service android:name=".service.NotificationService" />
        <service android:name=".service.ChatService" />

        <receiver android:name=".receiver.NotificationReceiver" />
        <receiver android:name=".receiver.ChatReceiver" />
        <receiver
            android:name=".receiver.DirectReplyReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.proxerme.app.ACTION_MESSAGE_REPLY" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receiver.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>