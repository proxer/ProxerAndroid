<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context="com.proxerme.app.adapter.ucp.ReminderAdapter">

    <android.support.v7.widget.CardView
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="1dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.proxerme.app.view.WidthAspectImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:transitionName="image"
                app:aspect="1.25"
                tools:ignore="UnusedAttribute"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/medium"
                android:background="@color/transparent_50"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="3"
                android:padding="8dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                tools:text="Some title"/>

            <TextView
                android:id="@+id/medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image"
                android:background="@color/transparent_50"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                tools:text="Animeserie"/>

            <TextView
                android:id="@+id/episode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/medium"
                android:layout_toLeftOf="@+id/language"
                android:layout_toStartOf="@+id/language"
                android:padding="8dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="Episode 12"/>

            <ImageView
                android:id="@+id/language"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/episode"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/episode"
                android:layout_below="@+id/medium"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <ImageButton
                android:id="@+id/removeButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@+id/episode"
                android:layout_centerHorizontal="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
