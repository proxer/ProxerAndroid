<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context="com.proxerme.app.adapter.chat.ConferenceAdapter">

    <android.support.v7.widget.CardView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="1dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.proxerme.app.view.WidthAspectCircleImageView
                android:id="@+id/image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:transitionName="image"
                tools:ignore="UnusedAttribute"/>

            <TextView
                android:id="@+id/topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image"
                android:layout_toLeftOf="@+id/newMessages"
                android:layout_toRightOf="@+id/image"
                android:layout_toStartOf="@+id/newMessages"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:text="Title"/>

            <ImageView
                android:id="@+id/newMessages"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/topic"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/topic"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/topic"
                android:layout_toEndOf="@+id/image"
                android:layout_toLeftOf="@+id/participants"
                android:layout_toRightOf="@+id/image"
                android:layout_toStartOf="@+id/participants"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="Two days ago"/>

            <TextView
                android:id="@+id/participants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/topic"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="5 Participants"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
